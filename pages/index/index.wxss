/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.slide-image {
  width: 100%;
  height: 100px;
}

.price {
  color: red;
}

.task-content {
  display: flex;
}

.task-right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: auto;
  text-align: right;
}

.task-card {
  margin-top: 10px;
}

.torelease-btn {
  background-color: #5cb48e;
  color: #fff;
}

.filter-item {
  margin: 0 10px;
  font-size: 14px;
  color: #666;
  height:30px;
  line-height:30px;
}

.filter-active {
  color: #5cb48e;
}

.detail-container {
  width: 280px;
  height: 100%;
  color:#fff;
  font-size: 16px;
}
.detail-tip {
  font-size: 12px;
  flex:1;
  text-align: center;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  color: #eee;
}

.detail-label {
  margin-right: 30px;
  font-size: 14px;
  color: #ccc;
}

.detail-row {
  margin: 20px 20px;
  /* border-bottom: 0.5px solid #ccc; */
}

.taskImg {
  width: 100px;
  height:100px;
  border: 0.4px solid #ccc;
  margin: 18px;
  display: inline-block;
}
